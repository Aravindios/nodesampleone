extends layout

block content
  h1=title

  form(method='POST' action='')

    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password', name='password')
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password', name='repassword')
    button.btn.btn-primary(type='submit') Submit 
    <a href='/users/forgetpassword'>forgetpassword</a>
  if sucess_msg != "" && sucess_msg != null
    div(class="alert alert-success") #{sucess_msg}
  if err_msg != "" && err_msg != null
    div(class="alert alert-danger") #{err_msg}     